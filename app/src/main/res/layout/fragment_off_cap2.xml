<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TitulCap21"
            android:layout_width="296dp"
            android:layout_height="57dp"
            android:backgroundTint="@color/material_on_primary_emphasis_medium"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="DATOS PERSONALES"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.002" />


        <TextView
            android:id="@+id/texcap11"
            android:layout_width="417dp"
            android:layout_height="60dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Ingrese la informaciÃ³n que se pide:"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.183" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="365dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="fill"
            android:hint="Nombres: "
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:maxLength="20"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.652"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.377" />

        <EditText
            android:id="@+id/txtAPaterno"
            android:layout_width="365dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="fill"
            android:hint="Apellido Paterno:"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:maxLength="20"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.652"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52" />

        <EditText
            android:id="@+id/txtAMaterno"
            android:layout_width="365dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="fill"
            android:hint="Apellido Materno:"
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:maxLength="20"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.652"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.655" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/doneAnII1"
            android:layout_width="187dp"
            android:layout_height="198dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.969"
            app:lottie_autoPlay="false"
            app:lottie_fileName="done.json"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_loop="false"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <!--
        <Button
            android:id="@+id/contNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Siguiente"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAMaterno"
            app:layout_constraintVertical_bias="0.06" />

        -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/contNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/botonestilo"
            android:text="Continuar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.798" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>